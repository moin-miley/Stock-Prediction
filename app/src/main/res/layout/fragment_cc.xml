<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:background="@color/teal_200">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/enterAmountText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter total amount:"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:padding="5dp"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/enterAmount"
                android:background="@color/white"
                android:layout_below="@+id/enterAmountText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="@color/black"
                android:inputType="numberDecimal"/>
            <TextView
                android:id="@+id/textView1"
                android:layout_below="@+id/enterAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="From:"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="bold"/>
            <Spinner
                android:id="@+id/spinner1_cc"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView1"
                android:spinnerMode="dropdown"
                android:layout_marginBottom="25dp"/>
            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="To:"
                android:textColor="@color/black"
                android:layout_below="@+id/spinner1_cc"
                android:textSize="30dp"
                android:textStyle="bold"/>
            <Spinner
                android:id="@+id/spinner2_cc"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView2"
                android:spinnerMode="dropdown"
                android:layout_marginBottom="25dp"/>
            <Button
                android:id="@+id/convertButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner2_cc"
                android:layout_centerInParent="true"
                android:backgroundTint="@color/teal_700"
                android:text="Enter"
                android:textColor="@color/white"
                android:textSize="10dp"/>
            <TextView
                android:id="@+id/output"
                android:layout_below="@+id/convertButton"
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="25dp"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>